<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.barbersakh.barberskh.RecordActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">


    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Детали выбора"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="206dp"
        android:layout_marginBottom="244dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@color/colorPrimaryDark"
            android:elevation="0dp">

            <ImageView
                android:id="@+id/ImgUslugi"
                android:layout_width="65dp"
                android:layout_height="65dp"/>

            <TextView
                android:id="@+id/tvNameUslugi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/ImgUslugi"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:layout_toEndOf="@+id/ImgUslugi"
                android:layout_toRightOf="@+id/ImgUslugi"
                android:text="Наименование услуги"
                android:textColor="#000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvDescriptionUslugi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvNameUslugi"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:layout_toEndOf="@+id/ImgUslugi"
                android:layout_toRightOf="@+id/ImgUslugi"
                android:text="Описание"
                android:textColor="#000"
                android:textSize="16sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:background="@color/colorPrimaryDark"
            android:elevation="0dp">

            <ImageView
                android:id="@+id/ImgCompany"
                android:layout_width="65dp"
                android:layout_height="65dp" />



            <TextView
                android:id="@+id/tvNameCompany"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/ImgCompany"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:layout_toEndOf="@+id/ImgCompany"
                android:layout_toRightOf="@+id/ImgCompany"
                android:text="Название компании"
                android:textColor="#000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvAddressCompany"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvNameCompany"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:layout_toEndOf="@+id/ImgCompany"
                android:layout_toRightOf="@+id/ImgCompany"
                android:text="Адрес"
                android:textColor="#000"
                android:textSize="16sp" />



        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:background="@color/colorPrimaryDark"
            android:elevation="0dp">

            <ImageView
                android:id="@+id/ImgSpecialist"
                android:layout_width="65dp"
                android:layout_height="65dp"/>

            <TextView
                android:id="@+id/tvNameSpecialist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/ImgSpecialist"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:layout_toEndOf="@+id/ImgSpecialist"
                android:layout_toRightOf="@+id/ImgSpecialist"
                android:text="Мастер"
                android:textColor="#000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvDescriptionSpecialist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvNameSpecialist"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:layout_toEndOf="@+id/ImgSpecialist"
                android:layout_toRightOf="@+id/ImgSpecialist"
                android:text="Описание"
                android:textColor="#000"
                android:textSize="16sp" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.625">

        <EditText
            android:id="@+id/etFIO"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Имя"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/etPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:autoLink="phone"
            android:ems="10"
            android:hint="Телефон"
            android:inputType="phone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etData"
                style="@android:style/Widget.Holo.Light.EditText"
                android:layout_width="400dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:contextClickable="false"
                android:ems="10"
                android:focusable="false"
                android:hint="Дата"
                android:inputType="textAutoCorrect|date" />

            <Spinner
                android:id="@+id/spinTime"
                style="@android:style/Widget.Material.Light.Spinner.Underlined"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:spinnerMode="dialog" />
        </LinearLayout>

        <Button
            android:id="@+id/btnRecord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:backgroundTint="@color/colorAccent"
            android:text="Записаться"
            android:textColor="@color/colorPrimary" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar1"
        style="@android:style/Widget.Material.Light.ProgressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498"
        tools:ignore="MissingConstraints" />

</android.support.constraint.ConstraintLayout>

<!--/android.support.constraint.ConstraintLayout-->
